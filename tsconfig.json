{
  "compilerOptions": {
    "lib": ["es6", "dom"], // target Node.js(v6)
    "module": "es6",
    "target": "es6",
    "moduleResolution": "node", // target Node.js(v6)
    "declaration": true, // generate TypeScript definitions
    "rootDir": "src",
    "strict": true,
    "skipLibCheck": true,
    "noImplicitReturns": true,
    "removeComments": false,
    "jsx": "react",
    "sourceMap": true
  }
}
